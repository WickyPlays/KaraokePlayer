<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_song_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#CD000000"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/player_song_search_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"

                android:backgroundTint="#00000000"
                android:padding="12dp"
                android:src="@drawable/close_24px"
                app:tint="@color/white" />

            <EditText
                android:id="@+id/player_song_search_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:background="#33000000"
                android:layout_marginTop="8dp"
                android:hint="Search songs..."
                android:nextFocusDown="@id/player_song_search_button"
                android:padding="12dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#AAAAAA" />

            <Button
                android:id="@+id/player_song_search_button"
                android:layout_width="0dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:nextFocusUp="@id/player_song_search_input"
                android:nextFocusDown="@id/player_song_list"
                android:text="Search" />
        </LinearLayout>

        <ListView
            android:id="@+id/player_song_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="#22000000"
            android:divider="#333333"
            android:dividerHeight="1dp"
            android:nextFocusUp="@id/player_song_search_button" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>